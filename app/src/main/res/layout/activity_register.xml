<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28282B"
    tools:context=".Register">

    <TextView
        android:id="@+id/txtheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill up the Details"
        android:textAllCaps="false"
        android:textColor="#0E76A8"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/edcompanyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/username"
        android:drawablePadding="20dp"
        android:ems="13"
        android:hint="Company Name"
        android:textColor="#fff"
        android:inputType="text"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtheading" />

    <EditText
        android:id="@+id/edcompanyemailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="20dp"
        android:ems="13"
        android:textColor="#fff"
        android:inputType="textEmailAddress"
        android:hint="Company Email-Id"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edcompanyname" />

    <EditText
        android:id="@+id/edcontactregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="20dp"
        android:ems="13"
        android:textColor="#fff"
        android:inputType="number"
        android:hint="Contact Number"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edcompanyemailid" />

    <EditText
        android:id="@+id/edaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/location"
        android:drawablePadding="20dp"
        android:ems="13"
        android:hint="Address"
        android:textColor="#fff"
        android:inputType="textMultiLine"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edcontactregister"
        />

    <EditText
        android:id="@+id/edaboutcompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="13"
        android:padding="10dp"
        android:hint="About company"
        android:inputType="text"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edaddress"/>

    <Button
        android:id="@+id/btnfillregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Register"
        android:layout_marginBottom="40dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="#0E76A8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>